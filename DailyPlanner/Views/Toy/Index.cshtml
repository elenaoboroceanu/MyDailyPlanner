@model IEnumerable<DailyPlanner.DomainClasses.Toy>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Code
        </th>
        <th>
            Description
        </th>
        <th>
            ToyType
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Code
        </td>
        <td>
			@item.Description
        </td>
        <td>
			@(item.ToyType == null ? "None" : item.ToyType.Name)
        </td>
    </tr>
}

</table>


