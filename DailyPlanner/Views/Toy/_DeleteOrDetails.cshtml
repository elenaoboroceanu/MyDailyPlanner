@model DailyPlanner.DomainClasses.Toy

<div class="form-group">
    <label for="@Model.Name" class="control-label col-xs-2">
        Name
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @Model.Name
        </p>
    </div>
</div>

<div class="form-group">
    <label for="@Model.Code" class="control-label col-xs-2">
        Code
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @Model.Code
        </p>
    </div>
</div>

<div class="form-group">
    <label for="@Model.Description" class="control-label col-xs-2">
        Description
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @Model.Description
        </p>
    </div>
</div>

<div class="form-group">
    <label for="@Model.ToyType" class="control-label col-xs-2">
        Toy type
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @(Model.ToyType == null ? "None" : Model.ToyType.Name)
        </p>
    </div>
</div>
