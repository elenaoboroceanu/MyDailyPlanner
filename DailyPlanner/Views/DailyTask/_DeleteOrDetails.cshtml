@model DailyPlanner.DomainClasses.DailyTask
    

<div class="form-group">
    <label for="@Model.Name" class="control-label col-xs-2">
        Name
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @Model.Name
        </p>
    </div>
</div>

<div class="form-group">
    <label for="@Model.Comment" class="control-label col-xs-2">
        Description
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @Model.Comment
        </p>
    </div>
</div>

<div class="form-group">
    <label for="@Model.Date" class="control-label col-xs-2">
        Date
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @Model.Date.ToShortDateString()
        </p>
    </div>
</div>

<div class="form-group">
    <label for="@Model.StartTime" class="control-label col-xs-2">
        Start time
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @Model.StartTime.ToShortTimeString()
        </p>
    </div>
</div>

<div class="form-group">
    <label for="@Model.Duration" class="control-label col-xs-2">
        Duration
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @Model.Duration
        </p>
    </div>
</div>

<div class="form-group">
    <label for="@Model.Activity" class="control-label col-xs-2">
        Activity
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @((Model.Activity == null) ? "None" : Model.Activity.Name)
        </p>
    </div>
</div>