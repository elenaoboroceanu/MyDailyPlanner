@model DailyPlanner.DomainClasses.DailyTask

@{
    ViewBag.Title = "Details";
}



<fieldset>
    <legend>@Model.Name task details</legend>

    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Model.Name
        </dd>

        <dt>Description</dt>
        <dd>@Model.Comment</dd>

        <dt>Date</dt>
        <dd>
            @Model.Date.ToShortDateString()
        </dd>

        <dt>Start time</dt>
        <dd>@Model.StartTime.ToShortTimeString()</dd>

        <dt>Duration</dt>
        <dd>@Model.Duration</dd>



        <dt>Activity</dt>
        <dd>@((Model.Activity == null) ? "None" : Model.Activity.Name)</dd>

    </dl>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">

            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning btn-xs" })

        </div>
    </div>

</fieldset>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>


