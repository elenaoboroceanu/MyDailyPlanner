@model DailyPlanner.DomainClasses.ActivityType

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm("Edit", "ActivityType",
                    FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Edit activity type</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.Partial("_CreateOrEdit", Model)

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Update activity type" class="btn btn-warning btn-sm" />
            </div>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to list", "Index")
</div>
