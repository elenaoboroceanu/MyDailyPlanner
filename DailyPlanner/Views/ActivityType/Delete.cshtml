@model DailyPlanner.DomainClasses.ActivityType

@{
    ViewBag.Title = "Delete";
}
<h3>Are you sure you want to delete this activity type?</h3>
<br />

@using (Html.BeginForm("Delete", "ActivityType", 
                        FormMethod.Post, new { @class = "form-horizontal" }))
{
 <div class="form-group">
        <div class="col-sm-2 control-label">Name</div>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="@Model.Name" disabled />
        </div>
    </div>
  
    <br />
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @Html.AntiForgeryToken()
            <input type="submit" value="Delete" class="btn btn-primary btn-sm" />
        </div>
    </div>

    @Html.ActionLink("Back to List", "Index")

}


