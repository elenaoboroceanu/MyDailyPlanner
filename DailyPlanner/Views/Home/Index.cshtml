@{
    ViewBag.Title = "Home Page";
}

@section head{
    <style type="text/css">
        .intro-header {
            padding-top: 50px; /* If you're making other pages, make sure there is 50px of padding to make sure the navbar doesn't overlap content! */
            padding-bottom: 50px;
            text-align: center;
            color: #f8f8f8;
            background: url(Content/img/intro-bg.jpg) no-repeat center center;
            background-size: cover;
        }
    </style>
}

<div class="row">
    <div class="col-lg-12">
        <div class="intro-message">
            <h1>Plan your day</h1>
            <h3>Start your day first by planning it!</h3>
           
            <ul class="list-inline intro-social-buttons">
                <li>
                    @*@Html.ActionLink("Go and plan >>", "Index", "DailyTask")*@
                    <a href=@Url.Action("Index", "DailyTask") class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Go and plan!</span></a>
                </li>
            </ul>

        </div>
    </div>
</div>
