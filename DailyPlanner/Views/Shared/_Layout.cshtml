<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Daily Planner</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    @RenderSection("head", required: false)

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">My daily planner</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (User != null)
                    {
                        if (User.Identity != null)
                        {
                            if (User.Identity.IsAuthenticated)
                            {
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Manage <span class="caret"></span></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="@Url.Action("Index", "ActivityType")">Activity types</a></li>
                                        <li><a href="@Url.Action("Index", "Activity")">Activities</a></li>
                                        <li class="divider"></li>
                                        <li><a href="@Url.Action("Index", "FlashcardType")">Flashcard types</a></li>
                                        <li><a href="@Url.Action("Index", "Flashcard")">Flashcards</a></li>
                                        <li class="divider"></li>
                                        <li><a href="@Url.Action("Index", "ToyType")">Toy types</a></li>
                                        <li><a href="@Url.Action("Index", "Toy")">Toys</a></li>
                                        <li class="divider"></li>

                                        <li><a href="@Url.Action("Index", "ActivityType")">Meals</a></li>
                                        <li class="divider"></li>
                                        <li><a href="@Url.Action("Index", "ActivityType")">Pills</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    }

                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="intro-header">
        <div class="container">
            @RenderSection("introheader", required: false)
        </div>
    </div>

    <div class="content-section-a">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-inline">
                        <li>
                            <a href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <a href="@Url.Action("About", "Home")">About</a>
                        </li>                       
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <a href="@Url.Action("Contact", "Home")">Contact</a>
                        </li>
                    </ul>
                    <p class="copyright text-muted small">Copyright &copy; Elena Oboroceanu 2014. All Rights Reserved</p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
