@model DailyPlanner.DomainClasses.Flashcard

@{
    ViewBag.Title = "Delete";
}

<fieldset>
    <legend>Delete flashcard</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Image</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Image).ToString()</div>

    <div class="display-label">Type</div>
    <div class="display-field">@(Model.Type == null ? "None" : Model.Type.Name)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


