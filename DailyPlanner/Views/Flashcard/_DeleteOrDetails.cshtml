@model DailyPlanner.DomainClasses.Flashcard

<div class="form-group">
    <label for="@Model.Name" class="control-label col-xs-3">
        Name
    </label>
    <div class="col-xs-9">
        <p class="form-control-static">
            @Model.Name
        </p>
    </div>
</div>

<div class="form-group">
    <label for="@Model.Description" class="control-label col-xs-3">
        Description
    </label>
    <div class="col-xs-9">
        <p class="form-control-static">
            @Model.Description
        </p>
    </div>
</div>



<div class="form-group">
    <label for="@Model.Type" class="control-label col-xs-3">
        Type
    </label>
    <div class="col-xs-9">
        <p class="form-control-static">
            @(Model.Type == null ? "None" : Model.Type.Name)
        </p>
    </div>
</div>


