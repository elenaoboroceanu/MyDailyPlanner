@model DailyPlanner.Models.Flashcard

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Name)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Description)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Description)
    @Html.ValidationMessageFor(model => model.Description)
</div>

<div class="editor-label">
    FlashcardType
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.FlashcardTypeId, ((IEnumerable<DailyPlanner.Models.FlashcardType>)ViewBag.PossibleFlashcardTypes).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.FlashcardTypeId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.FlashcardTypeId)
</div>
