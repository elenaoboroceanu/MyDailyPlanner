@model DailyPlanner.DomainClasses.Activity

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Activity", FormMethod.Post, new { @class = "form-horizontal" })) {
   
     @Html.ValidationSummary(true)

    <fieldset>
        <legend>Update <i>@Model.Name</i> activity</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.Partial("_CreateOrEdit", Model)

        <div class="form-group">
            <div class="col-xs-5"></div>
            <div class=" col-xs-2 text-center">
                <button type="submit" class="btn btn-primary btn-block" value="Save">Save</button>
            </div>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
