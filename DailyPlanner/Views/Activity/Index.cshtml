@model IEnumerable<DailyPlanner.Models.Activity>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            ActivityType
        </th>
        <th>
            Toys
        </th>
        <th>
            Flashcards
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Description
        </td>
        <td>
			@(item.ActivityType == null ? "None" : item.ActivityType.Name)
        </td>
        <td>
			@(item.Toys == null ? "None" : item.Toys.Count.ToString())
        </td>
        <td>
			@(item.Flashcards == null ? "None" : item.Flashcards.Count.ToString())
        </td>
    </tr>
}

</table>


