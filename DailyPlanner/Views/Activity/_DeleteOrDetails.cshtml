@model DailyPlanner.DomainClasses.Activity

<div class="form-group">
    <label for="@Model.Name" class="control-label col-xs-2">
        Name
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @Model.Name
        </p>
    </div>
</div>

<div class="form-group">
    <label for="@Model.Description" class="control-label col-xs-2">
        Description
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @Model.Description
        </p>
    </div>
</div>

<div class="form-group">
    <label for="@Model.ActivityType" class="control-label col-xs-2">
        Activity type
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @(Model.ActivityType == null ? "None" : Model.ActivityType.Name)
        </p>
    </div>
</div>

<div class="form-group">
    <label for="@Model.Toys" class="control-label col-xs-2">
        Toys
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @(Model.Toys == null ? "None" : Model.Toys.Count.ToString())
        </p>
    </div>
</div>

<div class="form-group">
    <label for="@Model.Flashcards" class="control-label col-xs-2">
        Flashcards
    </label>
    <div class="col-xs-10">
        <p class="form-control-static">
            @(Model.Flashcards == null ? "None" : Model.Flashcards.Count.ToString())
        </p>
    </div>
</div>
